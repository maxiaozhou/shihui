<div class="row">
  <div class="col-md-6">
    <% if @meetup.image.present? %>
      <%= image_tag(@meetup.image.medium.url, class: "thumbnail") %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2> <%= @meetup.title %> </h2>
    <div style="height:100px;">
      <p>
        <%= @meetup.description %>
      </p>
    </div>
    <div> 数量 : <%= @meetup.quantity %> </div>
    <div class="product-price"> ￥ <%= @meetup.price %> </div>
    <div class="pull-right">
      <% if @meetup.quantity.present? && @meetup.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_meetup_path(@meetup), method: :post, :class => "btn btn-danger btn-lg") %>
      <% else %>
        <%= link_to("无货", "#", class: "btn btn-danger btn-lg") %>
      <% end %>
    </div>
  </div>
</div>
